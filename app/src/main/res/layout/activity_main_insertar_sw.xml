<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityInsertarSW">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:text="Insertar Productos"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/edtNombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Producto"
        android:layout_margin="10sp"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/edtDistribuidorProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distribuidor del Producto"
        android:layout_margin="10sp"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/edtPrecioProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio del Producto"
        android:layout_margin="10sp"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/edtTamañoProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tamaño del Producto"
        android:layout_margin="10sp"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/btnInsertarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSERTAR PRODUCTO"
        android:layout_margin="15sp"
        android:textSize="25sp"
        android:onClick="Onclick"

        />
</LinearLayout>