<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityEliminarSW">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:text="Eliminar Productos"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="25sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/edtBuscarEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese ID a Eliminar"
            android:textSize="25sp"
            />
        <ImageButton
            android:id="@+id/imgBuscarEliminar"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_lupa"
            android:layout_gravity="center"
            android:layout_marginLeft="25sp"
            android:onClick="Onclick"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txtNombreProductoEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@color/design_default_color_error"
        android:text="..."
        android:layout_margin="15sp"
        />

    <TextView
        android:id="@+id/txtDistribuidorProductoEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@color/design_default_color_error"
        android:text="..."
        android:layout_margin="15sp"
        />
    <TextView
        android:id="@+id/txtPrecioProductoEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@color/design_default_color_error"
        android:text="..."
        android:layout_margin="15sp"
        />
    <TextView
        android:id="@+id/txtTamaÃ±oProductoEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@color/design_default_color_error"
        android:text="..."
        android:layout_margin="15sp"
        />
    <Button
        android:id="@+id/btnEliminarBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_margin="15sp"
        android:layout_gravity="center"
        android:textColor="@color/design_default_color_error"
        android:onClick="Onclick"
        />
</LinearLayout>